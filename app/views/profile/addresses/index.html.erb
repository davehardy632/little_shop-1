<h1><%= @user.name %> Addresses</h1>
<%= link_to "Add a new Address", new_profile_address_path %>

<% @addresses.each do |address| %>
<div id="address-<%= address.id %>">
  <p>Street: <%= address.address %></p>
  <p>City: <%= address.city %></p>
  <p>State: <%= address.state %></p>
  <p>Zip Code: <%= address.zip %></p>
  <p>Status: <%= address.nickname %></p>
  <% unless address.has_completed_order? %>
  <%= link_to "Edit Address", edit_profile_address_path(address) %>
  <%= link_to "Delete Address", profile_address_path(address), method: :delete %>
  <% end %>
</div>
<% end %>
