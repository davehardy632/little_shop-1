<%= tag.div class: "card float-left m-3 merchant-card" do %>
  <%= tag.section class: "card-body" do %>
    <%= tag.h5 class: "card-title" do %>
      <% if current_admin? %>
        <%= link_to merchant.name, admin_merchant_path(merchant) %>
      <% else %>
        <%= merchant.name %>
      <% end %>
    <% end %>
    <% merchant.addresses.each do |address| %>
    <p><%= address.city %>, <%= address.state %></p>
    <p>Registered Date: <%= address.created_at %><br/>
    <% end %>
    <% if current_admin? %>
    <p>
    <% if merchant.active %>
    <%= button_to 'Disable Merchant', admin_disable_merchant_path(merchant), method: :patch %>
    <% else %>
    <%= button_to 'Enable Merchant', admin_enable_merchant_path(merchant), method: :patch %>
    <% end %>
    </p>
    <% end %>
  <% end %>
<% end %>
